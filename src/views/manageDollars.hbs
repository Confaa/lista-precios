<div class='container mx-auto px-4 py-8'>
  <h1 class='text-2xl font-semibold text-gray-800 mb-6'>Administración de Tipos
    de Cambio</h1>

  <div class='flex justify-between items-center mb-4'>
    <a
      href='/'
      class='bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg shadow transition duration-300'
    >Inicio</a>
    <a
      href='/add-dollar'
      class='bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition duration-300'
    >Agregar Nuevo Tipo de Cambio</a>
  </div>

  <div class='bg-white shadow-md rounded-md overflow-hidden'>
    <table class='w-full table-auto'>
      <thead class='bg-blue-500 text-white'>
        <tr>
          <th
            class='py-3 px-4 uppercase font-semibold text-sm border-b border-gray-200 text-left'
          >Nombre</th>
          <th
            class='py-3 px-4 uppercase font-semibold text-sm border-b border-gray-200 text-left'
          >Valor</th>
          <th
            class='py-3 px-4 uppercase font-semibold text-sm border-b border-gray-200 text-left'
          >Creado</th>
          <th
            class='py-3 px-4 uppercase font-semibold text-sm border-b border-gray-200 text-left'
          >ULTIMA MODIFICACIÓN</th>
          <th
            class='py-3 px-4 uppercase font-semibold text-sm border-b border-gray-200 text-right'
          >Acciones</th>
        </tr>
      </thead>
      <tbody class='bg-gray-100'>
        {{#each dollars}}
          <tr class='hover:bg-gray-200 transition duration-300'>
            <td
              class='py-3 px-4 border-b border-gray-200 text-left'
            >{{this.name}}</td>
            <td
              class='py-3 px-4 border-b border-gray-200 text-left'
            >${{this.value}}</td>
            <td
              class='py-3 px-4 border-b border-gray-200 text-left'
            >{{formatDate this.updated_at}}</td>
            <td
              class='py-3 px-4 border-b border-gray-200 text-left'
            >{{formatDate this.created_at}}</td>
            <td
              class='py-3 px-4 border-b border-gray-200 text-right'
              data-dollar-id='{{this._id}}'
            >
              <a
                href='/edit-dollar/{{this._id}}'
                class='bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-md transition duration-300'
              >Editar</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>