<div class="flex justify-center items-center h-screen">
  <div class="px-10 py-16 bg-white rounded-lg shadow-xl max-w-md">
    <h1 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Editar
      Valor del Dólar</h1>
    <form
      onsubmit="editDollar(event)"
      class="bg-white rounded px-8 pt-6 pb-8 mb-4"
    >
      <div class="mb-4">
        <label
          for="dollarValue"
          class="block text-gray-700 text-sm font-bold mb-2"
        >
          Valor Actual del Dólar
        </label>
        <input
          type="number"
          name="value"
          step="0.01"
          value="{{dollar.value}}"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          required
          autocomplete="off"
        />
      </div>

      <div class="mb-4">
        <label
          for="lastModified"
          class="block text-gray-700 text-sm font-bold mb-2"
        >
          Última Modificación
        </label>
        <input
          type="text"
          name="lastModified"
          value="{{formatDate dollar.created_at}}"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"
          disabled
        />
      </div>

      <div class="flex items-center justify-center">
        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mr-4"
        >
          Guardar Cambios
        </button>
        <a
          href="/"
          class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        >
          Cancelar
        </a>
      </div>
    </form>
  </div>
</div>
<script src="/js/editDollar.js"></script>