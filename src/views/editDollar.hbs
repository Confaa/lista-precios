<div class='flex justify-center items-center min-h-screen bg-gray-100'>
  <div class='max-w-md w-full bg-white rounded-lg shadow-xl p-8'>
    <h1 class='text-2xl font-semibold text-gray-800 mb-6 text-center'>Editar
      Valor del Dólar</h1>

    <form
      onsubmit='editDollar(event)'
      class='bg-white rounded px-8 pt-6 pb-8'
      data-dolar-id='{{dollar._id}}'
    >
      <div class='mb-6'>
        <label
          for='dollarName'
          class='block text-gray-700 text-sm font-bold mb-2'
        >Nombre del Dólar:</label>
        <input
          type='text'
          id='dollarName'
          name='name'
          value='{{dollar.name}}'
          class='shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
          required
          autocomplete='off'
        />
      </div>

      <div class='mb-6'>
        <label
          for='dollarValue'
          class='block text-gray-700 text-sm font-bold mb-2'
        >Valor Actual del Dólar:</label>
        <input
          type='number'
          id='dollarValue'
          name='value'
          step='0.01'
          value='{{dollar.value}}'
          class='shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
          required
          autocomplete='off'
        />
      </div>

      <div class='mb-6'>
        <label
          for='lastModified'
          class='block text-gray-700 text-sm font-bold mb-2'
        >Última Modificación:</label>
        <input
          type='text'
          id='lastModified'
          name='lastModified'
          value='{{formatDate dollar.updated_at}}'
          class='shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight'
          disabled
        />
      </div>

      <div class='flex items-center gap-4 justify-between'>
        <a
          href='/manage-dollars'
          class='bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline'
        >
          Atrás
        </a>
        <button
          type='submit'
          class='bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline'
        >
          Guardar Cambios
        </button>
      </div>
    </form>
  </div>
</div>

<div
  id='toast'
  class='hidden fixed bottom-5 left-5 z-50 max-w-sm mx-auto overflow-hidden rounded-lg shadow-md'
  role='alert'
>
  <div class='bg-white rounded-lg shadow-xs overflow-hidden'>
    <div class='p-4 flex items-center'>
      <div
        class='inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg bg-blue-100 text-blue-500'
      >
        <svg
          class='w-5 h-5'
          fill='none'
          stroke='currentColor'
          viewBox='0 0 24 24'
          xmlns='http://www.w3.org/2000/svg'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
          ></path>
        </svg>
      </div>
      <div class='ml-3 text-sm font-normal' id='textNotification'>Mensaje de la
        notificación.</div>
      <button
        type='button'
        class='ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex h-8 w-8'
        data-dismiss-target='#toast'
        aria-label='Cerrar'
      >
        <span class='sr-only'>Cerrar</span>
        <svg
          class='w-5 h-5'
          fill='none'
          stroke='currentColor'
          viewBox='0 0 24 24'
          xmlns='http://www.w3.org/2000/svg'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M6 18L18 6M6 6l12 12'
          ></path>
        </svg>
      </button>
    </div>
  </div>
</div>

<script src='/js/editDollar.js'></script>