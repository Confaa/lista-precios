<div class='flex h-screen w-screen items-center justify-center bg-gray-100'>
  <div class='w-full max-w-lg px-4'>
    <h1 class='mb-6 text-center text-lg font-semibold text-gray-700'>SUBIR LISTA
      DE PRODUCTOS</h1>
    <form
      class='mb-4 rounded-lg bg-white px-8 pb-8 pt-6 shadow-lg'
      onsubmit='sendDocument(event)'
    >
      <div class='mb-6'>
        <label
          for='supplier'
          class='mb-2 block text-sm font-bold text-gray-700'
        >DESCUENTO - PROVEEDOR:</label>
        <div class='relative'>
          <select
            name='factor'
            class='block w-full appearance-none rounded-lg border border-gray-300 bg-white px-4 py-2 pr-8 shadow hover:border-gray-400 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500'
          >
            {{#each factors}}
              <option value='{{this._id}}-{{this.supplier_id}}'>{{this.value}}
                -
                {{this.name}}
                -
                {{this.supplier}}</option>
            {{/each}}
          </select>
          <div
            class='pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700'
          >
            <svg
              class='h-4 w-4 fill-current'
              xmlns='http://www.w3.org/2000/svg'
              viewBox='0 0 20 20'
            >
              <path
                d='M5.705 7.705l4.295 4.295 4.295-4.295-1.41-1.41-2.885 2.885-2.885-2.885-1.41 1.41z'
              />
            </svg>
          </div>
        </div>
      </div>
      <div class='mb-6'>
        <label
          for='file'
          class='mb-2 block text-sm font-bold text-gray-700'
        >DOCUMENTO:</label>
        <input
          type='file'
          name='file'
          class='focus:shadow-outline w-full appearance-none rounded-lg border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none'
        />
      </div>
      <div class='flex items-center justify-between'>
        <a
          href='/'
          class='focus:shadow-outline rounded-lg bg-red-500 px-4 py-2 font-bold text-white transition duration-300 ease-in-out hover:bg-red-700 focus:outline-none'
        >ATR√ÅS</a>
        <button
          type='submit'
          class='focus:shadow-outline rounded-lg bg-blue-500 px-4 py-2 font-bold text-white transition duration-300 ease-in-out hover:bg-blue-700 focus:outline-none'
        >ENVIAR</button>
      </div>
    </form>
    <div
      id='loadingScreen'
      class='fixed inset-0 z-50 flex hidden items-center justify-center bg-black bg-opacity-50'
    >
      <div class='lds-ripple'>
        <div
          class='animate-ripple absolute rounded-full border-4 border-yellow-500 opacity-100'
        ></div>
        <div
          class='animate-ripple animation-delay-500 absolute rounded-full border-4 border-yellow-500 opacity-100'
        ></div>
      </div>
    </div>
  </div>
</div>
<script src='/js/uploadDocument.js'></script>